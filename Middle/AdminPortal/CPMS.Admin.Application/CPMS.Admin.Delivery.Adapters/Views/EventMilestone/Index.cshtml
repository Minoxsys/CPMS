@{
    ViewBag.Title = "Manage Event Milestones";
}

<h2>Manage Event Milestones</h2>

@section scripts
{
    @Scripts.Render("~/Scripts/editEventMilestone.js")
<style>
    div.filtering {
        border: 1px solid #999;
        margin-bottom: 5px;
        padding: 10px;
        background-color: #EEE;
        width: 1200px;
    }
</style>
}


<div class="filtering">
    <form>
        Parent Event: <input type="text" name="parentEvent" id="parentEvent" />
        Event Milestone: <input type="text" name="eventMilestone" id="eventMilestone" />
        Event Used For Target Date: <input type="text" name="eventForTarget" id="eventForTarget" />
        <button type="submit" id="LoadRecordsButton">Load records</button>
    </form>
</div>    

<div id="EventMilestoneTable" style="width: 1200px; margin: auto;"></div>

@Html.Hidden("EventMilestoneListUrl", Url.Action("EventMilestoneList"))

@Html.Hidden("UpdateEventMilestoneUrl", Url.Action("UpdateEventMilestone"))