<!DOCTYPE html>
<html ng-app="admin">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-header">
            <h3 class="app-title">Admin Portal</h3>
        </div>
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Edit Roles-Permissions Mapping", "Index", "RolesPermissionsMapping")</li>
                    <li>@Html.ActionLink("Manage Users", "Index", "User")</li>
                    <li>@Html.ActionLink("Manage Event Milestones", "Index", "EventMilestone")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Minoxsys</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jtable")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/validationEngine")
    @RenderSection("scripts", required: false)
</body>
</html>
